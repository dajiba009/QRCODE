<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <RadioGroup
        android:id="@+id/test_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <RadioButton
            android:id="@+id/carSetRb"
            android:button="@null"
            android:layout_marginLeft="3.3dp"
            android:layout_marginTop="3.3dp"
            android:layout_width="53.3dp"
            android:layout_height="27.33dp"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="@drawable/select_navigationbar_color"
            android:drawableBottom="@drawable/selector_navigation_icon"
            android:text="车辆设置"
            />

        <RadioButton
            android:id="@+id/carCommonRb"
            android:button="@null"
            android:layout_marginLeft="3.3dp"
            android:layout_marginTop="3.3dp"
            android:layout_width="53.3dp"
            android:layout_height="27.33dp"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="@drawable/select_navigationbar_color"
            android:drawableBottom="@drawable/selector_navigation_icon"
            android:text="通用"
            />

        <RadioButton
            android:id="@+id/carSystemRb"
            android:button="@null"
            android:layout_marginLeft="3.3dp"
            android:layout_marginTop="3.3dp"
            android:layout_width="53.3dp"
            android:layout_height="27.33dp"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="@drawable/select_navigationbar_color"
            android:drawableBottom="@drawable/selector_navigation_icon"
            android:text="系统"
            />

        <RadioButton
            android:id="@+id/carIdentifyRb"
            android:button="@null"
            android:layout_marginLeft="3.3dp"
            android:layout_marginTop="3.3dp"
            android:layout_width="53.3dp"
            android:layout_height="27.33dp"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="@drawable/select_navigationbar_color"
            android:drawableBottom="@drawable/selector_navigation_icon"
            android:text="账号"
            android:checked="true"
            />

    </RadioGroup>

    <FrameLayout
        android:id="@+id/contentFragment"
        android:layout_below="@+id/test_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>